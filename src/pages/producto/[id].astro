---
// Dynamic product detail page
import products from '../../data/products.json';
import AddToCartButton from '../../components/AddToCartButton.astro';

export function getStaticPaths() {
  return products.map(product => ({
    params: { id: product.id.toString() },
    props: { product }
  }));
}

interface Props {
  product: typeof products[0];
}

const { product } = Astro.props as Props;

const SITE_TITLE = `${product.name} - Tienda de Especias`;
const SITE_DESCRIPTION = product.description;

const productSchema = {
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": product.name,
  "image": `https://k2spiceshop.com${product.image}`,
  "description": product.description,
  "brand": {
    "@type": "Brand",
    "name": "Tienda de Especias"
  },
  "offers": {
    "@type": "Offer",
    "url": `https://k2spiceshop.com/producto/${product.id}`,
    "priceCurrency": "EUR",
    "price": product.price.toFixed(2),
    "availability": "https://schema.org/InStock"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "250"
  }
};
---

<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>{SITE_TITLE}</title>
  <meta name="description" content={SITE_DESCRIPTION} />
  <meta name="keywords" content={`${product.name}, comprar ${product.name}, especias`} />
  <link rel="canonical" href={`https://k2spiceshop.com/producto/${product.id}`} />
  
  <!-- Schema.org Product Markup -->
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />

  <meta property="og:title" content={SITE_TITLE} />
  <meta property="og:description" content={SITE_DESCRIPTION} />
  <meta property="og:url" content={`https://k2spiceshop.com/producto/${product.id}`} />
  <meta property="og:type" content="product" />
  <meta property="og:image" content={`https://k2spiceshop.com${product.image}`} />
</head>

<body>
  <header>
    <nav class="navbar">
      <div class="nav-container">
        <h1><a href="/">üå∂Ô∏è Tienda de Especias</a></h1>
        <ul class="nav-links">
          <li><a href="/">Inicio</a></li>
