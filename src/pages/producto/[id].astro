        <div class="image-info">
          <p>üñºÔ∏è Foto del Producto</p>
        </div>
      </div>

      <div class="product-details">
        <h1>{product.name}</h1>
        
        <div class="rating">
          <span class="stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
          <span class="rating-count">(250 opiniones)</span>
        </div>

        <div class="price-section">
          <p class="price">‚Ç¨{product.price.toFixed(2)}</p>
          <p class="availability">‚úì En Stock - Env√≠o Gratis</p>
        </div>

        <div class="description">
          <h2>Descripci√≥n</h2>
          <p>{product.description}</p>
        </div>

        <div class="features">
          <h2>Caracter√≠sticas</h2>
          <ul>
            <li>‚úì 100% Natural y de alta calidad</li>
            <li>‚úì Sin aditivos ni conservantes</li>
            <li>‚úì Perfecto para cocina profesional y dom√©stica</li>
            <li>‚úì Envase herm√©tico para mayor durabilidad</li>
            <li>‚úì Marcado con garant√≠a de frescura</li>
          </ul>
        </div>

        <AddToCartButton 
          productId={product.id}
          productName={product.name}
          productPrice={product.price}
          productImage={product.image}
          productDescription={product.description}
        />

        <div class="shipping-info">
          <div class="info-item">
            <span class="icon">üöö</span>
            <div>
              <p class="title">Env√≠o R√°pido</p>
              <p class="detail">2-5 d√≠as laborales</p>
            </div>
          </div>
          <div class="info-item">
            <span class="icon">üîí</span>
            <div>
              <p class="title">Compra Segura</p>
              <p class="detail">Pago SSL cifrado</p>
            </div>
          </div>
          <div class="info-item">
            <span class="icon">‚Ü©Ô∏è</span>
            <div>
              <p class="title">Devoluciones</p>
